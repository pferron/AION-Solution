@model AION.Web.Models.EstimationViewModel

@{
    /**/

    string ModuleName = "Estimation";

    bool isenabled = !Model.IsReadOnly;
    string disabledcls = Model.DisabledCls;
    string disablebtn = Model.DisabledHtml;
    string readonlytxt = Model.ReadonlyHtml;

}

<!-- Modal Standard Notes -->
<div class="modal fade text-left" id="standard-notes-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel8" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-cyan white">
                <h4 class="modal-title white"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" id="form-standard-notes">
                    @Html.Partial("_StandardNotes", Model)
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-poppy" data-dismiss="modal">
                    <i class="ft-x"></i> Close
                </button>
                <button type="button" class="btn btn-poppy setviewonly standnotesubmit @disabledcls" @disablebtn>
                    <i class="fa fa-check-square-o"></i> Submit
                </button>

            </div>
        </div>
    </div>
</div>
