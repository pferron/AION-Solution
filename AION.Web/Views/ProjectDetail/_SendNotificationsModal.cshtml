@model AION.Web.Models.ProjectDetailViewModel

<div class="modal fade text-left" id="dialog-modal-sendnotifs" tabindex="-1" role="dialog" aria-labelledby="myModalLabel8" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-cyan white">
                <h4 class="modal-title white">
                    Send Notifications
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    @if (Model != null)
                    {
                        @Html.Partial("_SendNotifications", Model)
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-poppy" id="Submit_notifs">Send</button>
                <button type="button" class="btn btn-poppy" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
