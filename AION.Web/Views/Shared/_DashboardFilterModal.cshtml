<button type="button" class="btn btn-poppy" data-toggle="modal" data-target="#dashboard-filter-modal">Filter</button>

<!-- Modal Dashboard Filter -->
<div class="modal fade text-left" id="dashboard-filter-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel8" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-cyan white">
                <h4 class="modal-title white">Filter</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card col-md-12">
                    <div class="card-header">
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <span class="info filter-info" style="display: none;"></span>
                            <button type="button" class="btn btn-poppy save-filter">Save</button>
                            <button type="button" class="btn btn-poppy reset-filter">Reset</button>
                            <button type="button" class="btn btn-poppy cancel-filter">Cancel</button>
                        </div>
                    </div>
                    <div class="card-content collpase show">
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Partial("_MultiSelect")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>