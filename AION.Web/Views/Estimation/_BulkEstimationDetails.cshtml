                @Html.ListBoxFor(m => m.ExcludedPlanReviewersBuild, Model.PlanReviewersListViewModel,
                    new { @id = "chkDrpDnExPlnRvrsBuild", @class = "border-cyan chkDrpDnExPln multiselect", @multiple = "multiple" }, enableperm)
