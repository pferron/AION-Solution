@using AION.Web.Helpers

<div class="modal fade text-left" id="FWLL-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-cyan white">
                <h4 class="modal-title white">Facilitator Workload Summary</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered table-hover"
                       id="facilitatorworkloadlist">
                    <thead>
                        <tr>
                            <th data-sortable="true"><b>Facilitator Name</b></th>
                            <th data-sortable="true"><b>Number of projects assigned</b></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            List<AION.BL.Models.Facilitator> model = new APIHelper().GetFacilitatorWorkloadSummary(DateTime.Now.Date.AddDays(-30), DateTime.Now.Date);
                        }
                        
                        @foreach (var facilitatorWorkloadSummary in model)
                        {
                            <tr>
                                <td>@facilitatorWorkloadSummary.FirstName @facilitatorWorkloadSummary.LastName</td>
                                <td>@facilitatorWorkloadSummary.AssignedProjectsHours</td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-poppy" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>

</div>