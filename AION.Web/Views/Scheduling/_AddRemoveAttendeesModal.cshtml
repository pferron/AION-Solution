@using AION.BL

@model AION.Web.Models.AddAttendeeViewModel

<div class="modal fade text-left" id="dialog-modal-addattendees" role="dialog" aria-labelledby="addattendees">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-cyan white">
                <h4 class="modal-title white">Add Attendees</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-6">
                            <table class="table table-striped table-bordered table-hover p-2"
                                   data-toggle="table"
                                   data-toolbar="#toolbar"
                                   data-pagination="true"
                                   data-id-field="ID"
                                   data-page-list="[10]"
                                   data-show-footer="false"
                                   data-click-to-select="true"
                                   data-single-select="false"
                                   data-search="true"
                                   data-show-search-button="false"
                                   data-search-on-enter-key="false"
                                   id="addremoveattendees">
                                <thead>
                                    <tr>
                                        <th data-field="state" data-checkbox="true"></th>
                                        <th data-field="UserId" data-visible="false">ID</th>
                                        <th data-field="UserName" data-sortable="true">Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ foreach (UserIdentity item in Model.UserIdentities)
                                        {
                                            <tr>
                                                <td></td>
                                                <td>@item.ID</td>
                                                <td>@item.FirstName @item.LastName</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <input class="form-control" style="max-width: 500px;" type="hidden" id="requiredattendees" value="" />
                        </div>

                        <div class="col-6">
                            <div class="p-2">
                                Added:
                                <table class="table table-striped table-bordered table-hover"
                                       data-toggle="table"
                                       data-toolbar="#toolbar"
                                       data-pagination="true"
                                       data-id-field="ID"
                                       data-page-list="[10]"
                                       data-show-footer="false"
                                       data-click-to-select="false"
                                       data-single-select="false"
                                       data-search="false"
                                       data-show-search-button="false"
                                       data-search-on-enter-key="false"
                                       id="currentattendees">
                                    <thead>
                                        <tr>
                                            <th data-field="UserId" data-visible="false">ID</th>
                                            <th data-field="UserName" data-sortable="true">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody id="addeduserstbody">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-poppy" data-dismiss="modal">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>
