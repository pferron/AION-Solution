@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing | AION</title>
    <link href="~/app-assets/package/dist/css/uswds.min.css" rel="stylesheet" />
    <link href="~/app-assets/css/vendors.css" rel="stylesheet">
    <link href="~/app-assets/css/meckncgov.css" rel="stylesheet" />
    <link href="~/app-assets/css/custom/landingpage.css" rel="stylesheet" />
</head>
<body>

    <header id="meckco-header" class="usa-header usa-header--basic usa-header--megamenu meckco-header">
        @Html.Partial("~/Views/Shared/_MeckNCHeader.cshtml")

    </header>
    <div class="container-fluid pb-2">
        <div class="row m-4">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">
                <h2 style="float:right">
                    AION: Plan Review Estimation and Scheduling
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Sign out", "SignOut", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "usa-button usa-button--secondary landingsignin" })

                    }
                    else
                    {
                        @Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "usa-button usa-button--secondary landingsignin" })

                    }
                </h2>
                @if (Model.UIStatusMessage != AION.BL.UIStatusMessage.NA)
                {
                    <div id="statusmessage" class="alert-danger m-1 p-1 d-flex justify-content-center">
                        @Model.UIStatusMessage
                    </div>

                }
            </div>
        </div>
        <div class="row m-4">
            <div class="col-sm-4">
                <div class="card align-top">
                    <h5 class="card-header">Key Information</h5>
                    <div class="card-body">
                        <p>Welcome to Mecklenburg County Aion. This portal will assist in scheduling your upcoming plan review.</p>
                        <p>
                            If you have technical difficulties and need assistance you may contact us at
                            <br /><a href="mailto:ce-tech.triage@mecklenburgcountync.gov">ce-tech.triage@mecklenburgcountync.gov</a>
                        </p>

                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card align-top">
                    <h5 class="card-header">Contact Information</h5>
                    <div class="card-body">
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col">Agency</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Air Quality</td>
                                    <td>704-336-5430</td>
                                    <td>
                                        <a class="mailtolinks" href="mailto:AQ@MeckNC.gov">AQ@MeckNC.gov</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Code Enforcement</td>
                                    <td>980-314-CODE(2633)</td>
                                    <td>
                                        <div class="w-100 text-wrap">
                                            <a class="mailtolinks" href="mailto:Code@MeckNC.gov">Code@MeckNC.gov</a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>GIS Customer Service</td>
                                    <td>704-336-6175</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Solid Waste</td>
                                    <td>980-314-3867</td>
                                    <td><a class="mailtolinks" href="mailto:SolidWaste@MeckNC.gov">SolidWaste@MeckNC.gov</a></td>
                                </tr>
                                <tr>
                                    <td>Storm Water Services</td>
                                    <td>311 (704-336-7600 from outside the County)</td>
                                    <td>
                                        <a class="mailtolinks" href="mailto:StormWater@MeckNC.gov"> StormWater@MeckNC.gov</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-sm-2">
                <div class="card align-top">
                    <h5 class="card-header">Links</h5>
                    <div class="card-body links">
                        <div class="row">
                            <a href="https://code.mecknc.gov/plan-review/commercial/on-schedule">
                                Building Construction Web Page
                            </a>
                        </div>
                        <div class="row">
                            <a href="https://code.mecknc.gov/site-menu/plan-review/commercial/definitions">
                                Definitions of Services
                            </a>
                        </div>
                        <div class="row">
                            <a href="https://mecknc.widen.net/s/rgnfdtsdtt/psguide">
                                Plans Submittal Document
                            </a>
                        </div>
                        <div class="row">
                            <a href="https://aca-prod.accela.com/Mecklenburg/Default.aspx">
                                Accela
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="usa-footer meckco-footer usa-footer--big  bg-meckco-gradient-color-purple-footer">
        @Html.Partial("~/Views/Shared/_MeckNCFooter.cshtml")
    </footer>

    <script src="~/app-assets/package/dist/js/uswds-init.min.js"></script>
    <script src="~/app-assets/package/dist/js/uswds.min.js"></script>
    <script src="/app-assets/vendors/js/vendors.min.js"></script>
</body>
</html>