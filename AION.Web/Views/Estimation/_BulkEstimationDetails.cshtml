@using System.Web.Mvc.Html
@using AION.Web.Extensions

@model AION.Web.Models.BulkEstimationViewModel
@{
    bool enableperm = Model.PermissionMapping.Estimat_Trads;
}
<style>
    input[type="checkbox"] {
        width:100%;
