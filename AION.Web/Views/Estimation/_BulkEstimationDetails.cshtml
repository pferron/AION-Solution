    <h4 class="form-section">Building</h4>
    <div class="row">
        <div class="col-md-1 text-center skin skin-square">
            <div class="form-group">
                <fieldset>
                    <label>N/A</label>
                    @Html.CheckBoxFor(m => m.HrsNABuilding, new { @class = "form-check-input form-control skin skin-square border-cyan estimationna" }, Model.PermissionMapping.Estimat_Trads)
                </fieldset>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label for="HoursBuilding">Hours</label>
                @Html.TextBoxFor(m => m.HoursBuilding,
                    new { @class = "form-control border-cyan hrstextbox", @type = "number", @id = "txtHoursBuilding", @name = "appt", @min = "0.50", @max = "9999.00", @step = ".5" }, Model.PermissionMapping.Estimat_Trads)
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="PrimaryReviewerBuilding">Primary</label>
                @Html.DropDownListFor(m => m.PrimaryReviewerBuilding, Model.PlanReviewersListBuild, new { @class = "form-select form-control border-cyan" }, enableperm)
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="SecondaryReviewerBuilding">Secondary</label>
                @Html.DropDownListFor(m => m.SecondaryReviewerBuilding, Model.PlanReviewersListBuild, new { @class = "form-select form-control border-cyan" }, enableperm)
